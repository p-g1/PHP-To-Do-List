<!DOCTYPE html>
<html>
<head>
        <link href="http://fonts.googleapis.com/css?family=Bitter:400,700">
        <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    {% block head %}

    {% block javascripts %}
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
            <script>
            $(document).ready(function () {
            var count = 1;
                $("#add").on("click", function() {
                    $('#list').append('<li><input placeholder="Sh*t to do"><div class="buttons">' +
                            '<button class="check" id="remove" type="checkbox"><button class="check" id="done" ' +
                            'type="checkbox"></div></li>');
                    count++;
                });

                $(document).on("click", "#remove", function(){
                    $(this).parentsUntil('#list').remove();
                });

                $(document).on("click", "#done", function(){
                    $(this).parentsUntil("#list").css('background-color', 'darkslategray');
                    $(this).parent().siblings().css('background-color', 'darkslategray');
                    $(this).parent().siblings().css('border', 'none');
                });

                //if ( $('#list ul li').length > 1 ) {}
            });

            </script>
    {% endblock %}


            <title>{% block title %}{% endblock %} To Do List</title>
    {% endblock %}


        <style>
                body {
                background: #222;}


                h1 {
                        margin: 50px auto;
                        text-align: center;
                        text-shadow: -1px -1px 0 rgba(255,255,255,0.3), 1px 1px 0 rgba(0,0,0,0.8);
                        color: #777;
                        opacity: 0.4;
                        font: 700 80px 'Bitter';
                }

                h2 {
                        margin: 50px auto;
                        text-align: center;
                        text-shadow: -1px -1px 0 rgba(255,255,255,0.3), 1px 1px 0 rgba(0,0,0,0.8);
                        color: #777;
                        opacity: 0.4;
                        font: 200 60px 'Bitter';
                }

                h3 {
                    margin: 50px auto;
                    text-align: center;
                    text-shadow: -1px -1px 0 rgba(255,255,255,0.3), 1px 1px 0 rgba(0,0,0,0.8);
                    color: #777;
                    opacity: 0.4;
                    font: 200 60px 'Bitter';
                }

                footer{
                        margin:50px auto;
                        color:white;
                }

                li {
                        display:block;
                        margin:auto;
                        text-align:center;
                        padding: 20px 20px 20px 20px;
                        width: 20%;
                        border: 1px solid whitesmoke;
                        color:whitesmoke;
                        text-decoration: none;
                }

                input {
                    font: 200 20px 'Roboto', sans-serif;
                    text-align:left;
                    margin-right:30px;
                    background: #222;
                    color:whitesmoke;
                    width: 80%;
                    border: 1px solid #222;
                }

                button {
                        display: block;
                        height:auto;
                        margin:auto;
                        padding: 10px 15px 10px 15px;
                        font: 200 60px 'Bitter',serif;
                        line-height: 1.8;
                        background-color: #223;
                        box-shadow: inset 0 0 0 1px #27496d;
                        border: none;
                        border-radius: 15px;
                }

                .add:hover {
                        background-color: darkslategrey;
                }

                .check{
                        display:inline;
                        position:relative;
                        height: 30px;
                        margin-right:10px;
                        margin-top: -16px;
                        transform: translateY(-50%);
                }



                #done {
                    float:right;

                }

                #remove {
                    float:right;
                }

                #done:hover{
                        background:darkslategray;
                }

                #remove:hover{
                        background:darkred;
                }




        </style>
</head>
<body>
<h1> Super Awesome To Do List </h1>
<button class='add' id="add">
        <h2>Add New Sh*t</h2>
</button>
<br><br>
<ul id="list">
</ul>
<br><br>
<div id="content">{% block content %}{% endblock %}</div>

    {% block footer %}
      <footer>  <h3>No tasks?! Get a beer!</h3></footer>
    {% endblock %}

</body>

</html>
